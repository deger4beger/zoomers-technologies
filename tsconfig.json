{
    "compilerOptions": {
        "baseUrl": "src",
        "outDir": "./dist",
        "target": "es2018",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "lib": ["es2018", "esnext.asynciterable"]
    }
}